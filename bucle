lim = 3
s = 0;
while s <= lim:
  nombre = str (input ("Ingresa tu nombre --> "))
  edad = int(input("Ingresa tu edad --> "))
  print(f"Bienvenido<3, {nombre}")
  print(f"Tienes {edad} años")

  print("¿Quieres seguir ingresando otros datos?<3")
  print("3) Si")
  print("6) No")
  lim = int (input("Ingresa tu opcion --> "))

  if lim == 6:
    break
